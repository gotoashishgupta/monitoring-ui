root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 100

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[*.{py,md}]
max_line_length = 88
indent_style = space
indent_size = 4

[changes/*.md]
max_line_length = 0
indent_style = space
indent_size = 2

[BUILD,PANTSBUILD]
indent_style = space
indent_size = 4

[VERSION]
insert_final_newline = false

[Makefile]
indent_style = tab
